<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="myYSTU.Views.StaffPage">

    <NavigationPage.TitleView>
        <StackLayout HorizontalOptions="StartAndExpand" VerticalOptions="CenterAndExpand">
            <Label Text="Сотрудники" HorizontalTextAlignment="Center" FontSize="20"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <Grid VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <SearchBar Grid.Row="0" x:Name="SearchBar" Placeholder="Поиск" Loaded="SearchBar_Loaded" TextChanged="SearchBar_TextChanged"/>

        <CollectionView Grid.Row="1" x:Name="StaffTable" ItemsLayout="VerticalList" VerticalScrollBarVisibility="Never" ItemsUpdatingScrollMode="KeepScrollOffset">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout Padding="10">
                        <Border 
                                HeightRequest="50" 
                                WidthRequest="50"
                                StrokeShape="RoundRectangle 70,70,70,70"
                                HorizontalOptions="Fill"
                                VerticalOptions="FillAndExpand"
                                x:Name="imgBorder"
     
                                StrokeThickness="2"
                                Margin="0,5,10,5">

                            <Image
                                    Aspect="AspectFill"
                                    x:Name="staffAvatar"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center" 
                                    Source="{Binding Avatar}"
                                    MaximumWidthRequest="{Binding WidthRequest, Source={x:Reference imgBorder}}"
                                    MaximumHeightRequest="{Binding HeightRequest, Source={x:Reference imgBorder}}" />
                        </Border>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="Medium"/>
                            <Label Text="{Binding Post}" FontSize="Small" TextColor="DarkGray"/>
                        </StackLayout>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
