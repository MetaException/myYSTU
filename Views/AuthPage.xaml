<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="myYSTU.Views.AuthPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:myYSTU.ViewModels"
    x:DataType="viewmodels:AuthPageViewModel"
    Shell.NavBarIsVisible="False">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False" />
    </Shell.BackButtonBehavior>

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="Center">

        <Label
            FontSize="Small"
            IsVisible="{Binding IsErrorLabelEnabled}"
            Text="{Binding ErrorLabel}"
            TextColor="Red" />
        <Label FontSize="Small" Text="{Binding WelcomeLabelText}" />

        <Entry
            MaxLength="20"
            Placeholder="Логин"
            Text="{Binding Login}" />

        <Entry
            IsPassword="True"
            MaxLength="100"
            Placeholder="Пароль"
            Text="{Binding Password}" />

        <Button
            Command="{Binding LoginCommand}"
            HorizontalOptions="Fill"
            Text="Авторизация" />

    </VerticalStackLayout>

</ContentPage>
